public class Main {
	
	public static void main(String[] args) {
		int a[]= {3,5,6,1};
	     System.out.println("Original Array: ");
	     for(int x=0;x<a.length;x++) {
	    	 System.out.print(a[x]+"\t");
	     }
	     int i=0;
	     int j=a.length-1;
	     int temp;
	     while(i<j) {
	    	 temp=a[i];
	    	 a[i]=a[j];
	    	 a[j]=temp;
	    	 i++;
	    	 j--;
	     }
	     System.out.println("\nReversed Array: ");
	     for(int x=0;x<a.length;x++) {
	    	 System.out.print(a[x]+"\t");
	     }
	}
}
